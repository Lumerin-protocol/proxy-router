{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "./scripts/**/*.ts",
    "./lib/**/*.ts",
    "./hardhat.config.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
